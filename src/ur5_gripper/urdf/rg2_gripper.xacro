<?xml version="1.0"?>
<!-- xacro for rg2 mounted on the manipulator -->

<robot name="ur5" xmlns:xacro="http://ros.org/wiki/xacro">
  
  <xacro:macro name="rg2" params="prefix">
    <!-- rg2 joint -->
    <joint name="rg2_joint" type="fixed">
      <!--      <origin rpy="0 0 0" xyz="0.218 0 0"/> -->
      <origin rpy="0 0 0" xyz="0.0 0.01 0.04" />
      <parent link="tool1"/>
      <child link="${prefix}rg2_body_link"/>
    </joint>
    <link name="${prefix}rg2_body_link">
      <visual>
        <geometry>
          <mesh filename="package://ur5_gripper/meshes/visual/dae_rg2_.dae" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="White">
          <color rgba="1.0 1.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ur5_gripper/meshes/visual/rg2_.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1"/>
        <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
      </inertial>
    </link>

    <joint name="rg2_eef_joint" type="fixed">
      <origin rpy="0 0 0" xyz="0.195 0.0 0.0"/>
      <parent link="rg2_body_link"/>
      <child link="rg2_eef_link"/>
    </joint>
    <link name="rg2_eef_link"/>

  </xacro:macro>
</robot>
